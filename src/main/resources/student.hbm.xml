<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.hibernate.Student" table="STUDENT">
		<id column="ID" name="id" type="int"><generator class="native"></generator></id>
		<property column="NAME" name="name" type="string" />
		<property column="LASTNAME" name="lastname" type="string" />
		<property column="EMAIL" name="email" type="string" />
		<property column="PHONE" name="phone" type="string" />
		<property column="AGE" name="age" type="int" />
	</class>
</hibernate-mapping>